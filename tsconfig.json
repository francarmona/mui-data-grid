{
    "compilerOptions": {
        "noImplicitAny": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowJs": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "outDir": "./dist",
        "jsx": "react",
        "lib": ["es5", "es6", "dom"],
        "declaration": true,
        "sourceMap": false,
        "target": "es5",
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["./src/**/*.test.ts*", "./node_modules"]
}
